<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LecturerHomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Welcome to WiiPlanner"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="21sp" />

            <ImageView
                app:srcCompat="@drawable/logo"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="You are logged in as:"
                android:textAlignment="center"
                android:textStyle="normal|italic"/>

            <TextView
                android:id="@+id/logged_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Zacharia Manyoni"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tap to use these Controls"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textStyle="normal|italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/venues"
                        app:srcCompat="@drawable/venues"
                        android:id="@+id/addModule" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Add Module"
                        android:id="@+id/textView2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/venues"
                        app:srcCompat="@drawable/venues"
                        android:id="@+id/addVenue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Add Venue"
                        android:id="@+id/textView7" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/venues"
                        app:srcCompat="@drawable/venues"
                        android:id="@+id/editModule" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Edit Module"
                        android:id="@+id/textView98" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/venues"
                        app:srcCompat="@drawable/venues"
                        android:id="@+id/editVenue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Edit Venue"
                        android:id="@+id/textView78" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/venues"
                        app:srcCompat="@drawable/venues"
                        android:id="@+id/removeModule" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Remove Module"
                        android:id="@+id/textView8" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/venues"
                        app:srcCompat="@drawable/venues"
                        android:id="@+id/removeVenue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Remove Venue"
                        android:id="@+id/textView98" />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
